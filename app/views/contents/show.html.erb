<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", contents_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_content_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", content_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.content.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</b>
          <%= @content.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.content.short_content", :default => t("activerecord.labels.short_content", :default => "Short content")) %>:</b>
          <%= @content.short_content %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.content.large_content", :default => t("activerecord.labels.large_content", :default => "Large content")) %>:</b>
          <%= @content.large_content %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.content.category_id", :default => t("activerecord.labels.category_id", :default => "Category")) %>:</b>
          <%= @content.category_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.content.cached_slug", :default => t("activerecord.labels.cached_slug", :default => "Cached slug")) %>:</b>
          <%= @content.cached_slug %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_content_path(@content), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), content_path(@content), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => '/layouts/sidebar') -%>
